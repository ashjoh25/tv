<body>
  <header>
    <nav>
        <div class="nav-wrapper">
          <a href="/" class="brand-logo">Show Ranker</a>
            <ul id="desktop-nav" class="right hide-on-med-and-down">
                <!-- <li><a href="/">Home</a></li> -->
                <!-- <li><a href="/user_profile">Profile</a></li> -->
                <li><a href="/add_ranking/all_rankings">Full Ranking List</a></li>
                  <% if (isLoggedIn) { %>
                      <li><a href="/logout" class="btn red">Logout <%=user.name%>!</a></li>                        
                  <% } else { %>
                      <li><a href="/login" class="btn blue">Login</a></li>
                  <% } %>
            </ul>
        </div>
    </nav>
  </header>
    <h1>Add Show Ranking</h1>

<form method="post" action="/all_rankings">
        <div class="row">
          <div class="input-field col s6">
            <input type="text" name="show_name" id="nameInput" class="validate" data-length="32" required placeholder="Show Name:">
          </div>
          <div class="input-field col s6">
            <input type="number" name="genre_label" id="nameInput" class="validate" data-length="32" min="1" max="5" required placeholder="Genre:"> 
          </div>
          <div class="input-field col s6">
            <input type="text" name="description_info" id="nameInput" class="validate" data-length="32" required placeholder="Description:">
          </div>
          <div class="input-field col s6">
            <div class="rate">
            <input type="radio" name="ranking_num" id="star5" name="rate" value="5"  required/>
            <label for="star5" title="text">5 stars</label>
            <input type="radio" name="ranking_num" id="star4" name="rate" value="4" />
            <label for="star4" title="text">4 stars</label>
            <input type="radio" name="ranking_num" id="star3" name="rate" value="3" />
            <label for="star3" title="text">3 stars</label>
            <input type="radio" name="ranking_num" id="star2" name="rate" value="2" />
            <label for="star2" title="text">2 stars</label>
            <input type="radio" name="ranking_num" id="star1" name="rate" value="1" />
            <label for="star1" title="text">1 star</label>
            </div>
          </div>
      
          <button class="btn waves-effect waves-light" type="submit" >
              <i class="material-icons right">send</i>
              Submit
          </button>

        <h6>Input Genre as such:</h6>
        <ul class="helpme">
        <li>1 - Fantasy</li>
        <li>2 - Romance</li>
        <li>3 - Action</li>
        <li>4 - Comedy</li>
        <li>5 - Drama</li>
        </ul>

  </div>
</form>
    <script> M.AutoInit();</script>
</body>
</html>